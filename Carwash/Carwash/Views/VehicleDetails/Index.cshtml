@model IEnumerable<Carwash.DAL.Entities.VehicleDetail>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<h1>Lista</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.NumbrePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.NumbrePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                <a class="btn-primary" asp-action="Edit" asp-route-id="@item.Id" asp-route-vehicleid="@item.Vehicle.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
