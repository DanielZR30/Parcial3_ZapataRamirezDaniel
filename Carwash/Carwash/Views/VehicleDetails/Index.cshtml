@model IEnumerable<Carwash.DAL.Entities.VehicleDetail>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.NumbrePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.NumbrePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-vehicleid="@item.Vehicle.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" asp-route-vehicleid="@item.Vehicle.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-vehicleid="@item.Vehicle.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
